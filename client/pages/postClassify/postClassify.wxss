/* pages/postClassify/postClassify.wxss */
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #FFF;
}
.nopost {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  text-align: center;
}
.post {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: auto;
  margin-top: 10rpx;
}
.post_avator {
  width: 100rpx;
  height: auto;
  margin: 10rpx 10rpx 0;
}
.post_avator image {
  width: 100rpx;
  height: 100rpx;
}
.post_right {
  display: flex;
  flex-direction: column;
  margin: 10rpx 10rpx;
  height: auto;
}
.nickname {
  height: 50rpx;
  text-align: left;
  font-size: 32rpx;
  font-weight: 550;
  color: #A9664A;
}
.time {
  height: 50rpx;
  text-align: left;
  font-size: 24rpx;
  color: #ADADAD;
}
.time text{
  position: relative;
  top: 15rpx;
}
.content {
  margin-top: 10rpx;
  text-align: left;
  font-size: 32rpx;
}
.line {
  height: 1px;
  background: #ECECEC;
  width: 100%;
}
.make-topic {
	position: fixed;
	right: 40rpx;
	bottom: 150rpx;
	width: 100rpx;
	height: 100rpx;
	padding: 25rpx;
	text-align: center;
	box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, .3);
	background-color: rgba(0, 0, 0, .4);
	border-radius: 50%;
	font-size: 0;
	box-sizing: border-box;
	transition: all cubic-bezier(.6, 1.01, 1, 1) .3s;
}
.make-topic image {
	width: 50rpx;
	height: 50rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}