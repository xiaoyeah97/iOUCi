/* pages/mypost/mypost.wxss */
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #FFF;
}
.post {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: auto;
  margin-top: 10rpx;
}
.post_avator {
  width: 100rpx;
  height: auto;
  margin: 10rpx 10rpx 0;
}
.post_avator image {
  width: 100rpx;
  height: 100rpx;
}
.post_right {
  display: flex;
  flex-direction: column;
  margin: 10rpx 10rpx;
  height: auto;
}
.nickname {
  height: 50rpx;
  text-align: left;
  font-size: 32rpx;
  font-weight: 550;
  color: #A9664A;
}
.time {
  height: 50rpx;
  text-align: left;
  font-size: 24rpx;
  color: #ADADAD;
}
.time text{
  position: relative;
  top: 15rpx;
}
.content {
  margin-top: 10rpx;
  text-align: left;
  font-size: 32rpx;
}
.line {
  height: 1px;
  background: #ECECEC;
  width: 100%;
}