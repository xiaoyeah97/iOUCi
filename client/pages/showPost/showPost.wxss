/* pages/showPost/showPost.wxss */
.post_page{
  /* background: #fff;  */
  height: 1200rpx;
}
.user_words{
  height: 200rpx;
  width: 100%;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: block;
}
.userinfo-iavatar {
  height: 200rpx;
  width: 100rpx;
  position: relative;
  float: left;
}
.userinfo-iavatar image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  position: relative;
  top: 0rpx;
  left: 0rpx;
}
.post_top{
  height: 100rpx;
}
.name_time{
  position: relative;
  float: left;
  height: 100rpx;
}
.nickname{
  position: relative;
  height: 50rpx;
  top: 0rpx;
  left: 50rpx;
  font-size: 32rpx;
  color: #A9664A;
  text-align: left;
}
.date{
  position: relative;
  top: 10rpx;
  left: 50rpx;
  font-size: 24rpx;
  color: gray;
  float: none;
  text-align: left;
}
.like{
  float: right;
  height: 100rpx;
  width: 100rpx;
  position: relative;
  margin-right: 30rpx;
}
.like_img{
  height: 50%;
  width: 42rpx;
  position: relative;
  top: 20rpx; 
  left: 0rpx;
}
.like_num{
  position: relative;
  top: 20rpx;
  left: 5rpx;
  font-size: 25rpx;
  color: gray; 
}
.classify_img{
  float: right;
  height: 100rpx;
  width: 150rpx;
  margin-right: 50rpx;
}
.classify_img image{
  width: 136rpx;
	height: 54rpx;
  position: relative;
  top: 20rpx;
  left: 0rpx;
}
.post_text{
  float: none;
  position: relative;
  top: 20rpx;
  left: 50rpx;
}
.post_text text{
  font-size: 32rpx;
}
.show_photo{
  /* padding-bottom:100%; */
  margin: 0 20rpx 0;
  display: block;
  position: relative;
  top: 0rpx;
}
.textphoto{
  padding: 30rpx;
  width: 650rpx;
}
.comments_number{
  position: relative;
  background-color: #eee;
  text-align: center;
  height: 100rpx;
  width: 100%;
}
.comments_number text{
  position: relative;
  top: 30rpx;
}
.show_comments{
  position: relative;
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.comment_line{
  height: 1px;
  background: #eee;
  display: block;
  width: 100%;
}
.comments{
  height: 200rpx;
  margin-top: 20rpx;
}
.post_avatar {
  float: left;
  width: 100rpx;
  height: 200rpx;
}
.avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.comment_right{
  float: left;
  height: 80rpx;
  position: relative;
}
.nick_name{
  height: 40rpx;
  font-size: 26rpx;
  font-weight: 500rpx;
  position: relative;
  top: 0rpx;
  left: 30rpx;
  text-align: left;
}
.time{
  height: 40rpx;
  font-size: 18rpx;
  position: relative;
  top: 10rpx;
  left: 30rpx;
  color: gray;
  text-align: left;
}
.post_words{
  height: 100rpx;
  position: relative;
  left: 30rpx;
  top: 20rpx;
  font-size: 28rpx;
  text-align: left;
}
.nocomment{
  text-align: center;
  position: relative;
  top: 20rpx;
  left: 0rpx;
}
.make-topic {
	position: fixed;
	right: 40rpx;
	bottom: 150rpx;
	width: 100rpx;
	height: 100rpx;
	padding: 25rpx;
	text-align: center;
	box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, .3);
	background-color: rgba(0, 0, 0, .4);
	border-radius: 50%;
	font-size: 0;
	box-sizing: border-box;
	transition: all cubic-bezier(.6, 1.01, 1, 1) .3s;
}
.make-topic image {
	width: 50rpx;
	height: 50rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.clear{
  float: none;
}